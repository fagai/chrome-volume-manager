{
  "manifest_version": 3,
  "name": "Volume Manager",
  "version": "1.1.0",
  "description": "Control any tab's volume separately",
  "permissions": [
    "activeTab",
    "tabCapture",
    "tabs",
    "scripting"
  ],
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "512": "icon.png"
  }
}